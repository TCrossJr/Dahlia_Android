<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="addGroup"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/group_layout_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/group_profile_image"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/post_profile_image_description"
            android:padding="4dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:id="@+id/group_layout_names"
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_group_name" />

            <TextView
                android:id="@+id/group_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_group_description"
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/group_message"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:icon="@android:drawable/stat_notify_chat"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <Button
            android:id="@+id/group_more_options"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:icon="@drawable/more_options_2x_icon"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

    </LinearLayout>
</FrameLayout>