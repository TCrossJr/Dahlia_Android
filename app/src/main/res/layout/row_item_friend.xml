<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="selectFriend"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friend_profile_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/description_profile_image"
            android:padding="4dp"
            app:layout_constraintEnd_toStartOf="@id/friend_display_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/friend_display_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/test_friend_display_name"
            app:layout_constraintBottom_toTopOf="@+id/friend_description"
            app:layout_constraintEnd_toStartOf="@+id/friend_message"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/friend_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friend_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/test_friend_username"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/friend_message"
            app:layout_constraintStart_toEndOf="@+id/friend_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/friend_display_name" />

        <Button
            android:id="@+id/friend_message"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical|end"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/friend_more_options"
            app:layout_constraintEnd_toStartOf="@+id/friend_more_options"
            app:layout_constraintStart_toEndOf="@+id/friend_description"
            app:layout_constraintTop_toTopOf="@+id/friend_more_options"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/friend_more_options"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical|end"
            app:icon="@drawable/more_options_2x_icon"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/friend_message"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>