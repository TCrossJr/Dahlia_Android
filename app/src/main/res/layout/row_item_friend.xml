<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="selectFriend">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friend_profile_image"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/post_profile_image_description"
            android:padding="4dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:id="@+id/friend_layout_names"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/friend_display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_friend_display_name" />

            <TextView
                android:id="@+id/friend_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_friend_username" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/friend_message"
            android:layout_width="70dp"
            android:layout_height="55dp"
            app:icon="@android:drawable/ic_dialog_email" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0
" />

        <Button
            android:id="@+id/friend_more_options"
            android:layout_width="70dp"
            android:layout_height="55dp"
            app:icon="@drawable/more_options_2x_icon"
            app:iconTint="#FFFFFF" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0
" />

    </LinearLayout>
</FrameLayout>